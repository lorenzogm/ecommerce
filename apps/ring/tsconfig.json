{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@ring/providers/*": ["libs/shared/providers/src/*"],
      "@ring/services/*": ["libs/shared/services/src/*"],
      "@ring/ui/*": ["libs/shared/ui/src/*"],
      "components/*": ["apps/ring/src/components/*"],
      "services/*": ["apps/ring/src/services/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
