{
  "Main": {
    "site_name": {
      "type": "Text",
      "config": {
        "label": "Site Name"
      }
    },
    "logo": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 1080,
          "height": 1080
        },
        "thumbnails": [],
        "label": "Logo"
      }
    },
    "navigation": {
      "type": "Group",
      "config": {
        "fields": {
          "navigation_item": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["category"],
              "label": "Navigation Item"
            }
          }
        },
        "label": "Navigation"
      }
    }
  },
  "Social": {
    "instagram_url": {
      "type": "Text",
      "config": {
        "label": "Instagram URL"
      }
    },
    "facebook_url": {
      "type": "Text",
      "config": {
        "label": "Facebook URL"
      }
    }
  },
  "Payments": {
    "currency": {
      "type": "Select",
      "config": {
        "options": ["EUR"],
        "default_value": "EUR",
        "label": "Currency"
      }
    },
    "is_payment_method_wire_transfer_enabled": {
      "type": "Boolean",
      "config": {
        "placeholder_false": "Disabled",
        "placeholder_true": "Enabled",
        "default_value": false,
        "label": "Wire transfer"
      }
    },
    "is_payment_method_bizum_enabled": {
      "type": "Boolean",
      "config": {
        "placeholder_false": "Disabled",
        "placeholder_true": "Enabled",
        "default_value": false,
        "label": "Bizum"
      }
    },
    "is_payment_method_credit_card_enabled": {
      "type": "Boolean",
      "config": {
        "placeholder_false": "Disabled",
        "placeholder_true": "Enabled",
        "default_value": false,
        "label": "Payment with Credit"
      }
    }
  }
}
